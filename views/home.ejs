<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>HOME</title>
</head>
<body>
    <div class="w-[80%] mx-auto">
    <%- include('partials/_navbar') %> 
        <p class="m-5 text-center text-3xl">HOME</p>

        <!-- FORM SEARCH -->
        <div class="my-10 mx-auto">
            <form>   
                <label for="search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                        <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    </div>
                    <input type="search" name="search" class="block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" placeholder="Search Fields Name" >
                    <button type="submit" class="text-white absolute right-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Search</button>
                </div>
            </form>

            <!-- SHOW CATEGORIES -->
            <div class="mx-auto text-center my-10">
                <% categories.forEach(({id, name}) => { %>
                    <a href="/?categories=<%=id%>" class="p-2 m-2 rounded-lg bg-blue-200 text-blue-600 hover:bg-blue-700 hover:text-white"><%= name%></a>
                <% }) %> 
            </div>
            
            <div class="flex flex-wrap justify-center">
                <% fields.forEach((el) => { %>
                    <div class="max-w-sm m-5 p-2 bg-white border border-gray-200 rounded-lg shadow-md">
                        <a href="/fields/<%=el.id%>" class="object-fill">
                            <img class="rounded-t-lg" src="<%= el.imageUrl%>" alt=""  width="400px" height="200px"/>
                        </a>
                        <div class="p-5">
                            <a href="/fields/<%=el.id%>">
                                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900"><%= el.name%></h5>
                            </a>
                                <br><hr><br>
                                <p class="mb-3 text-center font-normal text-gray-700"><b><%= el.transactionTotal %> </b>users have played on this course</p>
                                <div class="my-5">
                                    <table class="w-full text-sm text-left text-gray-500 text-center ">
                                        <tbody>
                                            <tr class="border-b border-gray-200 ">
                                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50">
                                                    Price
                                                </th>
                                                <td class="px-6 py-4">
                                                    <%= el.price %> 
                                                </td>
                                            </tr>
                                            <tr class="border-b border-gray-200 ">
                                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50">
                                                    City
                                                </th>
                                                <td class="px-6 py-4">
                                                    nama kota
                                                </td>
                                            </tr>
                                            <tr class="border-b border-gray-200 ">
                                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap bg-gray-50">
                                                    Categories
                                                </th>
                                                <td class="px-6 py-4">
                                                    Nama Katagori
                                                </td>
                                            </tr>
                                    </table>
                                </div>
                                <div class="mx-auto text-center w-[100%]">
                                    <a href="/fields/<%=el.id%>" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                                        Read Details
                                        <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                                    </a>
                                </div>
                        </div>
                        
                    </div>
            <% }) %> 
            </div>
        </div>

        <div>


        </div>
    </div>
</body>
</html>